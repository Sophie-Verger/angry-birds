{% extends 'base.html.twig' %}

{% block title %}Hello BirdController!{% endblock %}

{% block body %}

<div class="row">
	<div class="col12">
		<h1>A Field Guide to Angry Birds</h1>
		<h2>Games that lodge in the brain often have comical stars</h2>
	</div>
</div>
<div class="row">
	{% for bird in birds %}
		<div class="card" style="width: 18rem;">
  <img src="{{asset('images/' ~ bird.image ) }} " class="card-img-top" alt="...">
  <div class="card-body">
    
    <a href="#" class=""><h5 class="card-title">{{bird.name}}</h5></a>
  </div>
</div>
	{% endfor %}
</div>

{% endblock %}

